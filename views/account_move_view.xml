<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="kyohei_sip_api_move_form">
        <field name="name">kyohei.bank.integrations.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_get_sip_qr"
                        string="Enviar QR"
                        type="object"
                        class="oe_highlight btn-primary"
                        groups="base.group_no_one"
                        invisible="move_type != 'out_invoice' or state != 'posted' or sip_qr_id or status_in_payment in ['paid', 'reversed']"/>
                <button name="action_revoke_sip_qr"
                        string="Revocar SIP"
                        type="object"
                        class="oe_highlight btn-primary"
                        groups="base.group_no_one"
                        invisible="move_type != 'out_invoice' or state != 'posted' or not sip_qr_id or status_in_payment in ['paid', 'reversed']"/>
                <button name="action_check_sip_payment"
                        string="Consulta SIP"
                        type="object"
                        class="oe_highlight btn-primary"
                        groups="base.group_no_one"
                        invisible="move_type != 'out_invoice' or state != 'posted' or not sip_qr_id or status_in_payment in ['paid', 'reversed']"/>
            </header>
            <field name="preferred_payment_method_line_id" position="after">
                <field name="sip_qr_id" readonly="True"/>
            </field>
        </field>
    </record>

</odoo>