<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="kyohei_sip_api_config_settings_form">
            <field name="name">res.config.settings.view.form.inherit.kyohei.bank.integrations</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='default_taxes_setting_container']" position="after">
                    <block title="SIP" id="discuss" invisible="country_code != 'BO'">
                        <setting string="Credenciales" help="Llenar con datos recibidos en correo electrónico">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="sip_username" string="Username" class="col-lg-3"/>
                                    <field name="sip_username"/>
                                </div>
                                <div class="row mt16">
                                    <label for="sip_password" string="Password" class="col-lg-3"/>
                                    <field name="sip_password"/>
                                </div>
                                <div class="row mt16">
                                    <label for="sip_auth_apikey" string="Auth Apikey" class="col-lg-3"/>
                                    <field name="sip_auth_apikey"/>
                                </div>
                            </div>
                        </setting>
                        <setting string="Parámetros QR" help="Defina las características de generación de los códigos QR">
                            <div class="row mt16">
                                    <label for="sip_environment" string="Entorno" class="col-lg-3"/>
                                    <field name="sip_environment"/>
                                </div>
                                <div class="row mt16" invisible="sip_environment != 'dev'">
                                    <label for="sip_qr_dev_apikey" string="QR Apikey" class="col-lg-3"/>
                                    <field name="sip_qr_dev_apikey"/>
                                </div>
                                <div class="row mt16" invisible="sip_environment != 'prod'">
                                    <label for="sip_qr_prod_apikey" string="QR Apikey" class="col-lg-3"/>
                                    <field name="sip_qr_prod_apikey"/>
                                </div>
                                <div class="row mt16">
                                    <label for="sip_qr_duration" string="Duración" class="col-lg-3"/>
                                    <field name="sip_qr_duration"/>
                                </div>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>

    </data>
</odoo>