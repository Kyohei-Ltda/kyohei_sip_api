<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">SIP Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'sip'">
                    <field name="sip_dev_username"
                           string="Username"
                           required="code == 'sip' and state == 'test'"
                           invisible="state != 'test'"/>
                    <field name="sip_dev_password"
                           string="Password"
                           required="code == 'sip' and state == 'test'"
                           invisible="state != 'test'"
                           password="True"/>
                    <field name="sip_dev_auth_apikey"
                           string="Auth apikey"
                           required="code == 'sip' and state == 'test'"
                           invisible="state != 'test'"
                           password="True"/>
                    <field name="sip_prod_username"
                           string="Username"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"/>
                    <field name="sip_prod_password"
                           string="Password"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"
                           password="True"/>
                    <field name="sip_prod_auth_apikey"
                           string="Auth apikey"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"
                           password="True"/>
                    <field name="sip_qr_prod_apikey"
                           string="QR apikey"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"
                           password="True"/>
                    <field name="sip_username"
                           string="Callback username"
                           invisible="state != 'test'"/>
                    <field name="sip_password"
                           string="Callback Password"
                           invisible="state != 'test'"/>
                </group>
                <group invisible="code != 'sip'">
                    <field name="sip_qr_dev_apikey"
                           string="QR apikey"
                           required="code == 'sip' and state == 'test'"
                           invisible="state != 'test'"
                           password="True"/>
                    <field name="sip_username"
                           string="Callback username"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"/>
                    <field name="sip_password"
                           string="Callback Password"
                           required="code == 'sip' and state == 'enabled'"
                           invisible="state != 'enabled'"/>
                    <field name="sip_qr_duration"
                           string="Duración QR"
                           invisible="state == 'disabled'"/>
                    <field name="sip_auth_token"
                           string="Token"
                           password="True"
                           invisible="state == 'disabled'"/>
                    <field name="sip_auth_duration"
                           string="Duración token"
                           invisible="state == 'disabled'"
                           groups="base.group_no_one"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
