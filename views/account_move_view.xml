<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="kyohei_bank_integrations_move_form">
        <field name="name">kyohei.bank.integrations.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_get_sip_qr"
                        string="Generar SIP"
                        type="object"
                        class="oe_highlight btn-primary"
                        invisible="move_type != 'out_invoice' or state != 'posted' or sip_qr_image != False"/>
                <button name="action_revoke_sip_qr"
                        string="Revocar SIP"
                        type="object"
                        class="oe_highlight btn-primary"
                        invisible="move_type != 'out_invoice' or state != 'posted' or sip_qr_image == False"/>
                <button name="action_check_sip_payment"
                        string="Consulta SIP"
                        type="object"
                        class="oe_highlight btn-primary"
                        invisible="move_type != 'out_invoice' or state != 'posted' or sip_qr_image == False"/>
            </header>
            <xpath expr="//form/sheet/*[1]" position="before">
                <field name="sip_qr_image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
            </xpath>
        </field>
    </record>

</odoo>